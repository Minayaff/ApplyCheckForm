@model ApplyCheckESosial.ViewModel.ApplyNumberVM
@using Microsoft.Extensions.Configuration
@inject IConfiguration configuration
@{
    ViewData["Title"] = "DocLogin";
}

<div class="div-container">
    <div class="row">
        <div class="col-md-12 text-right">
            <div class="width-auto">
                <button class="btn-app" type="button">
                    Müraciət sənədinin <br /> nömrəsi üzrə
                </button>
            </div>

        </div>
        <div class="col-md-12">
            <form asp-controller="Services" asp-action="ApplyNumber" method="post" class="width-auto mt-5" id="my_captcha_form">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                <div class="form-group ">
                    <label for="colFormLabelLg">Sənəd nömrəsi</label>
                    <input asp-for="DocNumber" type="number" onkeypress="return event.keyCode === 8 || event.charCode >= 48 && event.charCode <= 57"
                           class="form-control" id="colFormLabelLg" placeholder="20010XXXXXX">
                    <span asp-validation-for="DocNumber" class="text-danger"></span>
                </div>
                <div class="form-group mt-5">
                    <div class="g-recaptcha" data-sitekey="@configuration["reCAPTCHA:SiteKey"]">
                    </div>
                    <span id="captcha" style="margin-left:100px;color:red" />
                </div>
                <div class="form-group mt-5">
                    <span><a asp-controller="Home" asp-action="Index"><img style="margin-top: 3rem;" src="~/img/arrow.png" />  </a></span>
                    <button type="submit" class="btn-check">Yoxla</button>
                </div>
            </form>
        </div>

    </div>
</div>



@section Scripts{

    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
    <partial name="_ValidationScriptsPartial" />

}